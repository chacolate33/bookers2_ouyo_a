 <div class="book_comment">
 <% book.book_comments.each do |book_comment| %>
         <div class="flex">
          
           <%= link_to user_path(book.user.id) do %>
             <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
             <div><%= book_comment.user.name %></div>
           <% end %>

           <div class="mt-4 ml-2">
             <%= book_comment.comment %>
             <% if book_comment.user == current_user %>
             <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true do %>
             <span class="btn btn-sm btn-danger ml-3">Destroy</span>
             <% end %>
             <% end %>
           </div>
         </div>
 <% end %>
 </div>
