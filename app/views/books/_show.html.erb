<table class="table">
    <tbody>
     <tr>
      <td>
       <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
        <br>
        <%= book.user.name %>
       <% end %>
      </td>
      <td>
       <%= link_to book.title, book_path(book.id) %>
       </td>
      <td>
        <%= book.body %>
      </td>

      <td class="favorite-btn-<%= book.id %>">
        <%= render 'favorites/favorite-btn', book: book %>
      </td>

      <td>
       コメント数: <%= book.book_comments.count %>
      </td>
      
      <td>
       閲覧数: <%= book.impressions_count %>
      </td>

      <% if book.user.id == current_user.id %>
      <td>
        <%= link_to edit_book_path(book.id) do %>
        <span class="btn btn-sm btn-success">Edit</span>
        <% end %>
      </td>

      <td>
        <%= link_to book_path(book.id) ,method: :delete, "data-confirm" => "本当に消しますか？" do %>
        <span class="btn btn-sm btn-danger">Destroy</span>
        <% end %>
      </td>
      <% end %>

     </tr>
    </tbody>
   </table>
