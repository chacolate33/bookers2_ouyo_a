  <div class="col-md-3">
  <h2>User info</h2>
   <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %>
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
     </tr>
    </tbody>
   </table>

    <% if user.id == current_user.id %>
    <div class="row">
     <%= link_to edit_user_path(user) do %>
     <button class="btn btn-outline-secondary btn-block"><i class="fas fa-user"></i></button>
     <% end %>
    </div>

    <% else %>
    <div class="row">
     <%= link_to user_path(current_user) do %>
     <button class="btn btn-outline-secondary btn-block"><i class="fas fa-user"></i></button>
     <% end %>
    </div>
    <% end %>

    <h2 class="mt-3">New book</h2>
     <%= form_with model: book, local:true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, class:"form-control", autofocus: true, id:"inputTitle" %>
      <label for="inputBody">Opinion</label>
      <%= f.text_area :body, class:"form-control", autofocus: true %>
      <br>
      <%= f.submit 'Create Book', class:"btn btn-success" %>
     <% end %>

  </div>