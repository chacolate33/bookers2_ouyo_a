  <div class="col-md-3">
  <h2>User info</h2>
   <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %>
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
     </tr>
    </tbody>
   </table>


    <div class="row mt-5">
     <div class="btn btn-outline-secondary btn-block" style="width: 100%; padding: 0;"><%= link_to edit_user_path(user.id), style: 'width: 100%;' do %><i class="fas fa-user-cog" style="width: 100%;"></i><% end %></div>
    </div>


    <h2 class="mt-3">New book</h2>
     <%= form_with model: book, local:true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, class:"form-control", autofocus: true, id:"inputTitle", value: '' %>
      <label for="inputBody">Opinion</label>
      <%= f.text_area :body, class:"form-control", autofocus: true, value: '' %>
      <br>
      <%= f.submit 'Create Book', class:"btn btn-success" %>
     <% end %>

  </div>